{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "lib": ["ESNext"],
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "nodenext", // เปลี่ยนจาก "node" เป็น "nodenext"
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "resolveJsonModule": true, // รองรับการ import ไฟล์ JSON
    
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}